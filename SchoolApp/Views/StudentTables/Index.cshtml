@model IEnumerable<SchoolApp.Models.StudentTable>

@{
    ViewData["Title"] = "Index";
}

<p>
    <h4><a style="color: limegreen;" asp-action="Create">Add New Student Info</a></h4>
</p><br />
<h4><b>List of Students</b></h4><br />
<table class="table">
    <thead>
        <tr style="color:mediumblue">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModificationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @if (item.Gender.Equals(1))
                    {
                        <p>Male</p>
                    }
                    @if (item.Gender.Equals(2))
                    {
                        <p>Female</p>
                    }
                    @if (item.Gender.Equals(3))
                    {
                        <p>Other</p>
                    }
                   
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.ModificationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class.Name)
            </td>
            <td>
                <a style="color:yellowgreen" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a style="color:rebeccapurple" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a style="color:red" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
